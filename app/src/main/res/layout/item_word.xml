<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="?android:selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="18dp"
        tools:text="Title"
        android:textColor="@color/black"
        android:fontFamily="@font/bluecurve_light"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/txt_main"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txt_main"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/bluecurve_light"
        android:textSize="18sp"
        tools:text="Translation"
        android:textColor="@color/black"
        android:id="@+id/txt_translation"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/txt_translation"
        android:textColor="#2979FF"
        android:fontFamily="@font/bluecurve_light"
        tools:text="verb"
        android:layout_marginStart="12dp"
        android:id="@+id/txt_type"/>

    <ImageView
        android:id="@+id/is_favourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_unsaved"
        app:tint="@color/primary_color" />

</androidx.constraintlayout.widget.ConstraintLayout>